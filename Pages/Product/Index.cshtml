@page
@model rankfire.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GUID_Product">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GUID_Product">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GUID_Product">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
